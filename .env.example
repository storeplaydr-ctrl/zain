# ExNebula Environment Variables
# Copy this file to .env and fill in your values

# JWT Secret - Use any random string (32+ characters recommended)
# Example: mysupersecretjwtkey12345678901234567890
JWT_SECRET=your-random-secret-key-here

# MongoDB Database URL
# For MongoDB Atlas (recommended): mongodb+srv://username:password@cluster.mongodb.net/exnebula
# For local MongoDB: mongodb://localhost:27017/exnebula
MONGODB_URI=mongodb://localhost:27017/exnebula

# Port (Render will set this automatically)
PORT=3000

# Environment
NODE_ENV=production
